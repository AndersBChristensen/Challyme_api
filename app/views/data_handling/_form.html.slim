= simple_form_for @user do |f|
  = f.error_notification

  .form-inputs
    = f.input :username, label: "Brugernavn"
    = f.input :first_name, label: "Fornavn"
    = f.input :last_name, label: "Efternavn"
    = f.input :city, label: "By"
    = f.input :email, label: "E-mail"

  .form-actions
    = f.button :submit, class: "btn btn-primary", value: 'Opdater kunde'